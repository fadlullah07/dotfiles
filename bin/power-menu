#!/bin/bash

# Tentukan opsi menu Anda.
# Format \n adalah untuk baris baru.
# Anda bisa menggunakan ikon (Nerd Fonts) di sini jika Anda mau!
options="Shutdown \nReboot \nSuspend 󰒲\nLogout 󰍃\nLock "

# Gunakan 'walker -dmenu' untuk menampilkan menu.
# 'echo -e' diperlukan untuk memproses karakter \n dan ikon.
# Contoh dengan --no-search dan --prompt
choice=$(echo -e "$options" | walker --dmenu --nosearch -N -H --width 295 --minheight 1 --maxheight 600)

# Gunakan 'case' untuk menentukan apa yang harus dilakukan berdasarkan pilihan
case "$choice" in
"Shutdown ")
  systemctl poweroff
  ;;
"Reboot ")
  systemctl reboot
  ;;
"Suspend 󰒲")
  systemctl suspend
  ;;
"Logout 󰍃")
  # Perintah ini khusus untuk Hyprland
  hyprctl dispatch exit
  ;;
"Lock ")
  # Ganti 'swaylock' dengan 'hyprlock' atau pengunci layar Anda
  hyprlock
  ;;
*)
  # Lakukan apa-apa jika dibatalkan (esc)
  ;;
esac
